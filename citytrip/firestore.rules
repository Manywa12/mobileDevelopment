rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {
    // Allow collectionGroup queries for locations and cities
    match /{path=**}/locations/{locationId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.resource.data.createdBy == request.auth.uid;
    }
    
    match /{path=**}/cities/{cityId} {
      allow read: if true;
    }
    
    // Public read for all cities
    match /users/{userId}/cities/{cityId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;

      match /locations/{locationId} {
        allow read: if true;
        // Allow any authenticated user to add locations to any city
        allow create: if request.auth != null;
        // Only allow updating/deleting your own locations
        allow update, delete: if request.auth != null && request.resource.data.createdBy == request.auth.uid;

        match /reviews/{reviewId} {
          allow read: if true;
          allow write: if request.auth != null;
        }
      }
    }
    
    // Allow collectionGroup queries for reviews
    match /{path=**}/reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // User profile
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Conversations
    match /conversations/{conversationId} {
      // Allow read for authenticated users
      // Security is enforced at create/update level - only participants can create/update
      allow read: if request.auth != null;
      // Allow create if user is authenticated and is a participant
      allow create: if request.auth != null && 
                       request.resource.data.participants != null &&
                       request.auth.uid in request.resource.data.participants;
      // Allow update if user is authenticated and is a participant
      allow update: if request.auth != null && 
                       resource.data.participants != null &&
                       request.auth.uid in resource.data.participants;
      
      // Messages subcollection
      match /messages/{messageId} {
        // Allow read for authenticated users
        // Security is enforced at the conversation level - only participants can read conversations
        // Since only participants can send messages (enforced at create), this is safe
        // This works with queries because we don't need to check individual document data
        allow read: if request.auth != null;
        
        // Allow create if user is authenticated, is the sender, and includes participants
        allow create: if request.auth != null && 
                         request.resource.data.senderId != null &&
                         request.auth.uid == request.resource.data.senderId &&
                         request.resource.data.participants != null &&
                         request.auth.uid in request.resource.data.participants;
        // Allow update only by the sender
        allow update: if request.auth != null && 
                         resource.data.senderId != null &&
                         request.auth.uid == resource.data.senderId;
      }
    }
  }
}
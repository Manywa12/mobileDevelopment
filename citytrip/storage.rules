rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Cities images: users can upload to their own path
    match /cities/{userId}/{imageName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Location images: users can upload to their own path
    match /locations/{userId}/{cityId}/{imageName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}





